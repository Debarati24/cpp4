#include<iostream>
using namespace std;

int main()
{
	int n;
	cout<<"Enter the number of elements you want to insert in the array: "<<endl;
	cin>>n;
	int arr[n];
	
	cout<<"\n";
	cout<<"Enter the elements: "<<endl;
	for(int i =0; i<n; i++)
	{
		cin>>arr[i];
	}
	
	int *ptr = &arr[0];
	
	cout<<"\n";
	cout<<"The entered elements are: "<<endl;
	for(int i=0; i<n; i++)
	{
		cout<<*ptr<<endl;
		ptr++;
	}
	
	return 0;
}
